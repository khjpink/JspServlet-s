<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smhrd.database.MemberMapper">

  <!-- 회원가입 , 리졸트타입이 레코드 수 를 반환 -->
  <insert id="insertMember" parameterType="com.smhrd.domain.Member">
    INSERT INTO MEMBER (EMAIL,PW,TEL,ADDRESS) VALUES(#{email},#{pw},#{tel},#{address})
  </insert>
  
  <!-- 로그인, 로그아웃  parameterType : dao에서 넣어주는 매개변수 타입,resultType: 이메일 pw 정보 바구니를 묶는 멤버 타입  -->  
  <select id="selectMember"  parameterType="com.smhrd.domain.Member" resultType="com.smhrd.domain.Member">
  	SELECT * FROM MEMBER WHERE EMAIL=#{email} AND PW=#{pw}
  </select>

   <!-- 개인정보 수정, pw필드값이 null일때 업데이트하지 않겠다 -->    
  <update id="updateMember" parameterType="com.smhrd.domain.Member" >
   	UPDATE MEMBER 
   	SET <if test="pw != null">PW=#{pw},</if> 
   		TEL=#{tel}, 
   		ADDRESS=#{address} 
   	WHERE EMAIL=#{email}
   </update>
 
 <!-- 회원정보 전체 조회 -->
 <select id="selectAll" resultType="com.smhrd.domain.Member">
 	SELECT * FROM MEMBER
 </select>
   
 <!-- 회원삭제 -->
 <delete id="deleteMember" parameterType="String">
	DELETE FROM MEMBER WHERE EMAIL=#{email}
 </delete>
  
</mapper>


